@using MVC_CRUD.Core.Models
@model Slider
<div class="container">
	<div class="row">
		<div class="col-12">
			<form asp-action="DeletePost" method="post">
			<div class="card" style="width: 18rem;">
					<img class="card-img-top" src="~/uploads/sliders/@Model.ImageUrl" alt="Card image cap">
				<div class="card-body">
						<h6 class="card-title">@Model.LifeCycle</h6>
						<h5 class="card-title">@Model.Title</h5>
						<p class="card-text">@Model.Description</p>
						<p class="card-text">@Model.RedirectUrl</p>
						<a asp-action="Index" class="btn btn-primary">Go back</a>
						<input asp-for="@Model.Id" hidden value="@Model.Id" />
						<button type="submit" class="btn btn-primary">Delete</button>
				</div>
			</div>
			</form>
		</div>
	</div>
</div>