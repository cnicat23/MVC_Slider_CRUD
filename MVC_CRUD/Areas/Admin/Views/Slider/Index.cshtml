@using MVC_CRUD.Core.Models
@model List<Slider>
@{
    var counter = 1;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-3 mb-3">
                    <a asp-action="create" asp-controller="slider" class="btn btn-outline-primary">Create Feature</a>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Id</th>
                            <th scope="col">LifeCycle</th>
                            <th scope="col">Name</th>
                            <th scope="col">Description</th>
                            <th scope="col">RedirectUrl</th>
                            <th scope="col">Image</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@(counter++)</th>
                                <td>@item.Id</td>
                                <td>@item.LifeCycle</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.RedirectUrl</td>
                                <td><img src="~/uploads/sliders/@item.ImageUrl" width="100" height="100" alt="Alternate Text" /></td>
                                <td>
                                    <a type="button" asp-action="Update" asp-route-id="@item.Id" class="btn btn-outline-warning">Update</a>
                                    <a type="button" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-primary">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
