@using MVC_CRUD.Core.Models
@model Category
<div class="container">
	<div class="row">
		<div class="col-12">
			<form asp-action="DeletePost" method="post">
				<div class="card" style="width: 18rem;">
					<div class="card-body">
						<h6 class="card-subtitle mb-2 text-muted">@Model.Name</h6>
						<input asp-for="@Model.Id" value="@Model.Id" hidden />
						<a asp-controller="category" asp-action="index" class="btn btn-outline-info">go back</a>
						<button type="submit" class="btn btn-outline-danger">Delete</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>